<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditProfileFragment"
    android:padding="10dp"
    android:paddingTop="5dp"
    android:background="@color/dim">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/fake_appbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/return_button"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:backgroundTint="@color/white"
            android:layout_gravity="center" />
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit profile"
            style="@style/Tweet.Text"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/save_button"
            android:backgroundTint="@color/dim"
            android:text="Save"
            android:textColor="@color/white"
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/edit_profile_background"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/fake_appbar"
        android:scaleType="centerCrop"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/edit_profile_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_background"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/edit_profile_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_picture"
        android:text="Name"
        style="@style/TextViewNew"/>
    <EditText
        android:id="@+id/edit_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_name_text"
        android:text=""
        style="@style/TweetViewText"
        />
    <TextView
        android:id="@+id/edit_profile_bio_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_name"
        android:text="Bio"
        style="@style/TextViewNew"/>
    <EditText
        android:id="@+id/edit_profile_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_bio_text"
        android:text=""
        style="@style/TweetViewText"
        />
    <TextView
        android:id="@+id/edit_profile_location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_description"
        style="@style/TextViewNew"/>
    <EditText
        android:id="@+id/edit_profile_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_location_text"
        android:text=""
        style="@style/TweetViewText"
        />
</androidx.constraintlayout.widget.ConstraintLayout>